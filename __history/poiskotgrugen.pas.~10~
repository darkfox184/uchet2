unit poiskotgrugen;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Grids, Vcl.DBGrids, Vcl.StdCtrls,
  Vcl.ComCtrls, Vcl.ExtCtrls;

type
  Totgrpoisk = class(TForm)
    Panel1: TPanel;
    GroupBox1: TGroupBox;
    Label1: TLabel;
    Label2: TLabel;
    DateTimePicker1: TDateTimePicker;
    DateTimePicker2: TDateTimePicker;
    Button1: TButton;
    GroupBox2: TGroupBox;
    DateTimePicker3: TDateTimePicker;
    search: TButton;
    ComboBox1: TComboBox;
    Edit1: TEdit;
    Button3: TButton;
    Button4: TButton;
    Panel2: TPanel;
    DBGrid1: TDBGrid;
    Button2: TButton;
    procedure FormCreate(Sender: TObject);
    procedure FormActivate(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure searchClick(Sender: TObject);
    procedure ComboBox1Change(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  otgrpoisk: Totgrpoisk;

implementation

{$R *.dfm}

uses data8_1;

procedure Totgrpoisk.Button1Click(Sender: TObject);
var
date1,date2:string;
begin
Data8.zakaz_Query.SQL.Clear;
Data8.zakaz_Query.SQL.Add ('SELECT * FROM pzakaz  where `datez`>=:date1 AND `datez`<=:date2 AND poluch =:poluch ');
Data8.zakaz_Query.ParamByName('poluch').Value:='да';
date1:= FormatDateTime('yyyy-mm-dd',DateTimePicker1.Date);
date2:= FormatDateTime('yyyy-mm-dd',DateTimePicker2.Date);
Data8.zakaz_Query.ParamByName('date1').Value:=date1;
Data8.zakaz_Query.ParamByName('date2').Value:=date2;
Data8.zakaz_Query.open;
end;

procedure Totgrpoisk.Button2Click(Sender: TObject);
begin
Data8.sel_Query.SQL.Clear;
Data8.sel_Query.SQL.Add ('Update pzakaz SET poluch =:poluch WHERE id=:id ');
Data8.sel_Query.ParamByName('poluch').AsString:='нет';
Data8.sel_Query.ParamByName('id').AsString:=DBGrid1.Fields[0].AsString;;
Data8.sel_Query.ExecSQL;
Data8.zakaz_Query.Refresh;
end;

procedure Totgrpoisk.Button3Click(Sender: TObject);
begin
Data8.zakaz_Query.SQL.Clear;
Data8.zakaz_Query.SQL.Add ('SELECT *  FROM pzakaz Where poluch =:poluch  ORDER BY id DESC, id LIMIT 100  ');
Data8.zakaz_Query.ParamByName('poluch').asstring:='да';
Data8.zakaz_Query.open;
end;

procedure Totgrpoisk.Button4Click(Sender: TObject);
var
  buttonSelected : Integer;
begin
  // Отображение диалога с подтверждением
  buttonSelected := MessageDlg('Вы действительно хотите удалить товар из заказа?',mtWarning, mbOKCancel, 0);
     // Показ типа выбранной кнопки
  if buttonSelected = mrOK     then
  begin
Data8.sel_Query.SQL.Clear;
Data8.sel_Query.SQL.Add ('DELETE FROM pzakaz where id=:in3');
Data8.sel_Query.ParamByName('in3').AsString:=DBGrid1.Fields[0].AsString;
Data8.sel_Query.ExecSQL;
Data8.zakaz_Query.Refresh;
  end;
if buttonSelected = mrCancel then
begin
Data8.zakaz_Query.Refresh;
  end;

end;

procedure Totgrpoisk.ComboBox1Change(Sender: TObject);
begin
if combobox1.ItemIndex=1 then
begin
  DateTimePicker3.Visible:=true;
  edit1.Visible:=false;
end
else
begin
  edit1.Visible:=true;
  DateTimePicker3.Visible:=false
end;
end;

procedure Totgrpoisk.FormActivate(Sender: TObject);
begin
Data8.zakaz_Query.SQL.Clear;
Data8.zakaz_Query.SQL.Add ('SELECT *  FROM pzakaz Where poluch =:poluch  ORDER BY id DESC, id LIMIT 100  ');
Data8.zakaz_Query.ParamByName('poluch').asstring:='да';
Data8.zakaz_Query.open;
end;

procedure Totgrpoisk.FormCreate(Sender: TObject);
begin
Data8.zakaz_Query.SQL.Clear;
Data8.zakaz_Query.SQL.Add ('SELECT *  FROM pzakaz Where poluch =:poluch  ORDER BY id DESC, id LIMIT 100  ');
Data8.zakaz_Query.ParamByName('poluch').asstring:='да';
Data8.zakaz_Query.open;
end;

procedure Totgrpoisk.searchClick(Sender: TObject);
var
str:string;
begin
if combobox1.ItemIndex=0 then begin
Data8.zakaz_Query.SQL.Clear;
Data8.zakaz_Query.SQL.Add ('SELECT *  FROM pzakaz where snomer like ''%'+edit1.text+'%'' AND poluch =:poluch');
Data8.zakaz_Query.ParamByName('poluch').AsString:='да';
Data8.zakaz_Query.open;
  end;
if combobox1.ItemIndex=1 then begin
str:= FormatDateTime('yyyy-mm-dd',DateTimePicker1.Date);
Data8.zakaz_Query.SQL.Clear;
Data8.zakaz_Query.SQL.Add ('SELECT *  FROM pzakaz where datez=:in3 AND poluch =:poluch');
Data8.zakaz_Query.ParamByName('in3').Value:=str;
Data8.zakaz_Query.ParamByName('poluch').AsString:='да';
Data8.zakaz_Query.open;
  end;
if combobox1.ItemIndex=2 then begin
Data8.zakaz_Query.SQL.Clear;
Data8.zakaz_Query.SQL.Add ('SELECT * FROM pzakaz where description like ''%'+edit1.text+'%'' AND poluch =:poluch');
Data8.zakaz_Query.ParamByName('poluch').AsString:='да';
Data8.zakaz_Query.open;
  end;
if combobox1.ItemIndex=3 then begin
Data8.zakaz_Query.SQL.Clear;
Data8.zakaz_Query.SQL.Add ('SELECT * FROM pzakaz where nakladnaya like ''%'+edit1.text+'%'' AND poluch =:poluch');
Data8.zakaz_Query.ParamByName('poluch').AsString:='да';
Data8.zakaz_Query.open;
  end;
  if combobox1.ItemIndex=4 then begin
Data8.zakaz_Query.SQL.Clear;
Data8.zakaz_Query.SQL.Add ('SELECT * FROM pzakaz where fio like ''%'+edit1.text+'%'' AND poluch =:poluch');
Data8.zakaz_Query.ParamByName('poluch').AsString:='да';
Data8.zakaz_Query.open;
  end;

end;

end.
